<h1><%= t('demo.headers.zeropoint_demo') %></h1>

<%= form_with url: search_path, method: :get, local: true do |f| %>
  <%= f.label :q, t('demo.labels.search_posts') %>
  <%= f.text_field :q, value: params[:q], placeholder: t('demo.search') %>
  <%= f.submit t('demo.buttons.search') %>
<% end %>

<% if @search_results %>
  <h2><%= t('demo.headers.search_results') %></h2>
  <ul>
    <% @search_results.each do |post| %>
      <li><%= link_to post.title, post_path(post) %> by <%= post.user.username %></li>
    <% end %>
  </ul>
<% end %>

<h2><%= t('demo.headers.recent_posts') %></h2>
<ul>
  <% @posts.each do |post| %>
    <li><%= link_to post.title, post_path(post) %> by <%= post.user.username %> (<%= post.status %>)</li>
  <% end %>
</ul>

<h2><%= t('demo.headers.trending_posts') %></h2>
<ul>
  <% @trending_posts.each do |post| %>
    <li><%= link_to post.title, post_path(post) %> (<%= post.like_count %> likes)</li>
  <% end %>
</ul>

<h2><%= t('demo.headers.active_users') %></h2>
<ul>
  <% @users.each do |user| %>
    <li><%= link_to user.username, user_path(user) %> (<%= user.full_name %>)</li>
  <% end %>
</ul> 