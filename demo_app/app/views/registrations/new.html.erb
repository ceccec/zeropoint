<h1><%= t('demo.headers.sign_up') %></h1>

<%= form_with model: @user, url: signup_path, local: true do |f| %>
  <% if @user.errors.any? %>
    <div class="errors">
      <h2><%= t('demo.messages.errors_prohibited_save_plural', count: @user.errors.count, resource: 'user') %></h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :email, t('demo.labels.email') %>
    <%= f.email_field :email, required: true %>
  </div>

  <div>
    <%= f.label :username, t('demo.labels.username') %>
    <%= f.text_field :username, required: true %>
  </div>

  <div>
    <%= f.label :first_name, t('demo.labels.first_name') %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name, t('demo.labels.last_name') %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :bio, t('demo.labels.bio') %>
    <%= f.text_area :bio %>
  </div>

  <div>
    <%= f.label :password, t('demo.labels.password') %>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.label :password_confirmation, t('demo.labels.password_confirmation') %>
    <%= f.password_field :password_confirmation, required: true %>
  </div>

  <%= f.submit t('demo.buttons.sign_up') %>
<% end %>

<p>
  <%= t('demo.links.already_have_account') %> <%= link_to t('demo.links.sign_in'), login_path %>
</p> 